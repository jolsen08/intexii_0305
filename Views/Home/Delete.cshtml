@{
    ViewData["Title"] = "Delete Record";
}

@model Burialmain

<h2> Confirm Deletion </h2>
<h3> Are you sure you want to delete the record for @Model.Id?</h3>

<form method="post" asp-controller="Home" asp-action="Delete">
    <button type="submit"> Delete </button>
    <a class="btn btn-primary" asp-controller="Home" asp-action="BurialSummary"> Cancel </a>
    <input type="hidden" for="id">
</form>